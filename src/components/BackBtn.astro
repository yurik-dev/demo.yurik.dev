---
import { Icon } from 'astro-icon/components';
---

<div
  id='backBtn'
  class='font-serif absolute left-5 top-5 flex gap-4 opacity-60 transition duration-300 ease-in-out hover:cursor-pointer hover:opacity-80 dark:opacity-40'>
  <Icon name='eva:diagonal-arrow-left-up-fill' />
  <p class='font-news italic'>back</p>
</div>

<script>
  const backBtn = document.getElementById('backBtn');
  backBtn.addEventListener('click', () => window.history.back());
</script>
